---
export interface Props {
  label: string;
}

const { label } = Astro.props;
function upperCaseFirst(string: string) {}
---

<div class={`callout ${label}`}>
  <h4>{label}</h4>
  <div class="callout-body">
    <slot />
  </div>
</div>

<style>
  h4 {
    font-size: 1.2rem;
    text-transform: capitalize;
    padding: 0.2rem 0.8rem;
    color: white;
  }
  .callout {
    border-radius: 4px;
  }
  .callout.tip {
    border: solid 1px #3c80ca;
  }
  .callout.tip h4{
    background-color: #3c80ca
  }
  .callout.note {
    border: solid 1px #72ae8b;
  }
  .callout.note h4{
    background-color: #72ae8b
  }

  .callout-body {
    padding: 1rem 1.5rem;
  }
  p {
    margin-bottom: 0.3rem;
  }
</style>
