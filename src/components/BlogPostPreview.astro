---
export interface Props {
  post: any;
}

const { post } = Astro.props;
---

<article class="post-preview">
  <header>
    <!-- <p class="publish-date">{post.publishDate}</p> -->
    <a href={post.url}><h1 class="title">{post.title}</h1></a>
  </header>
  <p>{post.description}</p>
  <a href={post.url} class="readmore">Read more</a>
</article>

<style>
  .content :global(main > * + *) {
    margin-top: 1rem;
  }

  .post-preview {
    position: relative;
    padding: 2rem;
    margin-bottom: 3rem;
    background-color: var(--color-white);
    /* box-shadow: 14px 14px 0px 0px rgba(var(--color-black-rgb), 1); */
    z-index: 1;
  }
  .post-preview:before {
    content: "";
    position: absolute;
    inset: 0;
    z-index: -1;
    transform: translate(-4px, -4px);
    border: solid 2px var(--color-pink);
  }
  .post-preview:after {
    content: "";
    position: absolute;
    inset: 0;
    z-index: -1;
    transform: translate(4px, 4px);
    border: solid 2px var(--color-purple);
  }

  header {
    align-items: flex-start;
    display: flex;
    flex-direction: column;
    justify-content: center;
    text-align: left;
    line-height: 1.12;
    margin-bottom: 0.8rem;
  }

  .title,
  .author,
  .publish-date {
    margin: 0;
  }

  .publish-date,
  .author {
    font-size: 1.25rem;
    color: var(--theme-text-lighter);
  }
  p {
    line-height: 1.42;
    margin-bottom: 0.5rem;
  }

  .title {
    font-size: 2.25rem;
    font-weight: 900;
    color: var(--theme-text);
  }
  .readmore {
    color: var(--theme-accent);
  }
  a {
    text-decoration: none;
  }
</style>
